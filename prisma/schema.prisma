generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  name  String
}

model Booking {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  voyageId  String
  createdAt DateTime @default(now())
}

model Ship {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model Voyage {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  shipId  String
  date    DateTime
}





